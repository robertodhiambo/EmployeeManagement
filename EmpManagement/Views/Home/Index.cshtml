@model IEnumerable<EmpManagement.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="card-deck">
    @foreach ( var employee in Model )
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="~/image/image1.jpg" />

            <div class="card-footer text-center">
                <a class="btn btn-primary m-1" asp-controller= "home" asp-action="details" asp-route-id="@employee.Id">View</a>

                <a class="btn btn-primary m-1" asp-action="edit" asp-controller="home" asp-route-id="@employee.Id">Edit</a>

                <a href="" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>